{
  "name": "maso-file-support",
  "displayName": "MASO File Support",
  "description": "VS Code extension for .maso files with JSON validation and schema support",
  "version": "0.1.0",
  "publisher": "vicajilau",
  "icon": ".github/assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/vicajilau/maso_vs_extension.git"
  },
  "keywords": [
    "maso",
    "json",
    "validation",
    "process scheduling",
    "language support",
    "regular",
    "burst"
  ],
  "license": "MIT",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "languages": [
      {
        "id": "maso",
        "aliases": [
          "MASO",
          "maso"
        ],
        "extensions": [
          ".maso"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/icon.png",
          "dark": "./icons/icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "maso",
        "scopeName": "source.maso",
        "path": "./syntaxes/maso.tmGrammar.json"
      }
    ],
    "configurationDefaults": {
      "[maso]": {
        "editor.defaultFormatter": "vscode.json-language-features"
      },
      "files.associations": {
        "*.maso": "maso"
      }
    },
    "commands": [
      {
        "command": "maso-file-support.validateFile",
        "title": "Validate MASO File",
        "category": "MASO",
        "icon": {
          "light": "./icons/icon.png",
          "dark": "./icons/icon.png"
        }
      },
      {
        "command": "maso-file-support.diagnoseDetection",
        "title": "Diagnose MASO File Detection",
        "category": "MASO"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "MASO Configuration",
      "properties": {
        "maso.validation.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable MASO file validation"
        },
        "maso.validation.strictMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable strict validation mode"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:unit": "npm run compile-tests && vscode-test",
    "test:watch": "npm run watch-tests",
    "vsce:package": "vsce package",
    "vsce:publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  }
}